@model IAmBacon.ViewModels.PostsViewModel
@section meta
{
    <meta name="description" content="Blog site for Colin Bacon - Web Developer.  Push button, receive blog." />
}
@section css
{
    @Styles.Render("~/bundles/landingpageCss")
}
@section iecss
{
    @Styles.Render("~/bundles/landingpageIeCss")
}
<div class="pageTitle">
    <div class="layoutContainer layoutContainer--visible has-triangle">
        <h1 class="pageTitle-headline">I am blog</h1>
        <p class="pageTitle-subline">These are the things I write about</p>
    </div>
</div>
<div class="layoutContainer">
    <h2 class="subTitle">Recent Posts</h2>

    @Html.DisplayFor(x => x.Posts)    
</div>

