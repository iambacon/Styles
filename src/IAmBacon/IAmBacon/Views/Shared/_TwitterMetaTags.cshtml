@model IAmBacon.ViewModels.ITwitterMetadata

<meta name="twitter:card" content="summary_large_image" />
<meta name="twitter:site" content="@Model.Site" />

@*Open Graph meta tags*@
<meta property="og:url" content="@Model.Url" />
<meta property="og:title" content="@Model.MetaTitle" />
<meta property="og:description" content="@Model.Description" />

@if (Model.HasImage)
{
    <meta property="og:image" content="@Model.Image" />
}
    @*
        Twitter image must be a minium size of 120px by 120px and less than 1mb in file size.
    *@