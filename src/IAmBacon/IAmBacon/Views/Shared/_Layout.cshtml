@using IAmBacon.Presentation.HtmlHelpers;
@using IAmBacon.ViewModels
@model ViewModelBase
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@Model.PageTitle</title>
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    @RenderSection("meta", false)
    @if (Model as ITwitterMetadata != null)
    {
        @Html.Partial("_TwitterMetaTags")
    }
    @RenderSection("css", false)
</head>
<body>
    @{Html.RenderPartial("_Header");}
    <main role="main">
        @RenderBody()
    </main>
    @{Html.RenderAction("Footer");}
    <link href='http://fonts.googleapis.com/css?family=Lato:400,700' rel='stylesheet' type='text/css'>
    @RenderSection("belowTheFoldCss", false)
    @RenderSection("scripts", false)
    @Google.GetAnalyticsHtml()
</body>
</html>
