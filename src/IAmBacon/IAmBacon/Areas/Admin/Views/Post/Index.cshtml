@model IAmBacon.Areas.Admin.ViewModels.PostsViewModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<h2>Index</h2>
<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Posts.First().Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Posts.First().Summary)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Posts.First().Tags)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Posts.First().DateModified)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Posts.First().DateCreated)
        </th>
        <th></th>
    </tr>
    @foreach (var item in Model.Posts)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Summary)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Tags)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateModified)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateCreated)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }
</table>
