@model IReadOnlyCollection<IAmBacon.Core.Application.Post.Queries.Post>

<h1>Posts</h1>
<p>
    <a asp-controller="Post" asp-action="Create">Create New</a>
</p>
<table>
    <tr>
        <th>Title</th>
        <th>Date modified</th>
        <th>Date created</th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Title</td>
            <td>@item.DateModified</td>
            <td>@item.DateCreated</td>
            <td>
                <a asp-controller="Post" asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-controller="Post" asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-controller="Post" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
    }
</table>